<div class="col-md-8">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Categoria</th>
      <th>Instituciones</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="cuerpo_tabla_cursos">
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.titulo %></td>
        <td><%= course.category.nombre %></td>
        <td><%= course.programations.count %></td>
        
        <!--<td>
        <%= image_tag course.imagen.url(:thumb) %></td>-->
        <td><%= link_to 'Ver', course %></td>
        <td><%= link_to 'Editar', edit_course_path(course) %></td>
        <td><%= link_to 'Eliminar', course, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>


