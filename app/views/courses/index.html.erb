<div class="container">
  <div class="row">

<div class="col-md-4 ">
      <h1>Lista de Cursos</h1>
      <%= form_tag courses_path, method: :get,remote:true,'data-type' => :json do %>
        <div class="form-group">
          <%= text_field_tag :filtro_cursos, params[:titulo_cur], class: "form-control", placeholder: "Filtrar Curso" %>
        </div>
       
      <% end %>
      <%= link_to 'Nuevo Curso', new_course_path ,class:'btn btn-success'%>
