<%content_for :title do %>
 <title>Cursos - Proncades</title>
<%end%>

<div class="container">
  <div class="row">
    <div class="col-md-12  ">
    	<div class="row">
    		<div class="col-md-5 col-lg-4">
    			<h5 class="text-left" style="font-weight:bolder" >Categorias disponibles</h5>
				<ul class="list-group list-group-flush">
					<% if !@categorias.blank? %>
						<% for item in @categorias %>
							<li class="list-group-item list-group-item-action lista-categorias-cliente" id=<%=item.id%> style="cursor:pointer">
								<%=link_to item.nombre, cursos_url(:category_id=>item.id,:t=>@tipo_curso)%>
        					</li>
						<% end %>
					<% else %>
						
					<% end %>
            	</ul>
    		</div>
    		<div class="col-md-7 col-lg-8">
	    		<div class="row">
	    			<div class="col-xs-12 orm" ><h4 id="nombreCategoriaCursos" class="text-right" style="font-weight:bold;font-size:17px;color:rgba(0, 0, 0, 0.6)">
	    			<%if @tipo_curso=='1'%>
	    				Diplomado
	    			<%elsif @tipo_curso=='2'%>
	    				Maestr√≠a
	    			<%else%>
	    				Doctorado
	    			<%end%>

	    			</h4></div>
	    		</div>
    			
			    <div class="lista-cursos-cliente" id="lista-cursos-cliente">
			    	<div class="card card-de-lista " >
			    		
							<%@cursos.each do |c|%>
						<div class="card-block card-flex" style="border-bottom:1px solid #ddd;">
							<div class="card-flex-left" >
								<div class="div-normal" >
									
									<h4 class="card-title" ><%=c.titulo%></h4>
								</div>
								<div class="div-normal" >
									<%= link_to 'Ver detalles', curso_url(c.id,:t=>@tipo_curso)%>
								</div>
							</div>
							
							<div class="card-flex-rigth" ">
								<%= image_tag c.imagen.url(:mini),class:'img.-rounded card-flex-imagen'%>
							</div>
							
							<!-- Links -->
						</div>
						<%end%>

						</div>
						
			    </div>
			    <% if @cursos.size==0 %>
			    <div class="sin-resultados text-center well"  id="sin_resultados_cursos">
							<p class="text-center" style="color:#27e1ce;">No se ha encontrado disponible ningun curso</p>
						</div>
					<%end%>

    		</div>
    	</div>


    </div>
    </div>
    </div>