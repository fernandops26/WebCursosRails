<div class="panel ">
<%= form_for(@institution) do |f| %>
  <% if @institution.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@institution.errors.count, "error") %> Se produjeron los siguientes errores:</h2>

      <ul>
      <% @institution.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <%= f.label :razon %><br>
  <div class="form-group">
    <%= f.text_field :razon ,class:'form-control'%>
  </div>
        <%= f.label :imagen%>
  <div class="form-group">
          <%= f.file_field :imagen %>
        </div>
  <div class="form-group">
    <%= f.submit 'Guardar' ,class:'btn btn-success'%>
  </div>
<% end %>
</div>