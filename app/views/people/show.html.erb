<div class="fh5co-contact ">
<div class="container ">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <p id="notice"><%= notice %></p>
      <h3>Información de Persona</h3>

      <form class="form well">
          <div class="row">

            <div class="col-md-6">
              <div class="row">
                 <div class="col-sm-12">
                  <div class="form-group">
                     <label class=" control-label">Nombres</label>
                     <p class="form-control-static"><%= @person.nombres%> <%= @person.ape_pat%> <%= @person.ape_mat%> </p>
                  </div>
                </div>

                <div class="col-sm-12">
                  <div class="form-group">
                     <label class=" control-label">DNI</label>
                     <p class="form-control-static"><%= @person.dni%> </p>
                  </div>
                </div>


                <div class="col-sm-12">
                  <div class="form-group">
                     <label class=" control-label">F. Nacimiento</label>
                     <p class="form-control-static"><%= @person.f_nacimiento%> </p>
                  </div>
                </div>

                <div class="col-sm-12">
                  <div class="form-group">
                     <label class=" control-label">Sexo</label>
                     <p class="form-control-static">
                        <% if @person.sexo==true%>
                          Masculino
                        <%else%>
                          Femenino
                        <%end%>
                     </p>
                  </div>
                </div>

                <div class="col-sm-12">
                  <div class="form-group">
                     <label class=" control-label">Departamento/Provincia/Distrito</label>
                     <p class="form-control-static"><%= @person.district.province.department.nombredep%> / <%= @person.district.province.nombreprov%> / <%= @person.district.nombredist%></p>
                  </div>
                </div>

                <div class="col-sm-12">
                  <div class="form-group">
                     <label class=" control-label">Dirección</label>
                     <p class="form-control-static"><%= @person.direccion%> </p>
                  </div>
                </div>


              </div>
            </div>
            <div class="col-md-6">
              <div class="row">
                <div class="col-sm-12">
                  <div class="form-group">
                     <label class=" control-label">Celular</label>
                     <p class="form-control-static">
                     
                      <%if @person.celular_op.size > 0%>
                        <%= @person.celular %> / <%=@person.celular_op%>
                      <%else%>
                        <%= @person.celular %>
                      <%end%>
                     </p>
                  </div>
                </div>

                <div class="col-sm-12">
                  <div class="form-group">
                     <label class=" control-label">Email</label>
                     <p class="form-control-static"><%= @person.email%> </p>
                  </div>
                </div>

                 <div class="col-sm-12">
                  <div class="form-group">
                     <label class=" control-label">Profesión</label>
                     <p class="form-control-static"><%= @person.profesion%> </p>
                  </div>
                </div>

                 <div class="col-sm-12">
                  <div class="form-group">
                     <label class=" control-label">Grado Academico</label>
                     <p class="form-control-static"><%= @person.grado_acad%> </p>
                  </div>
                </div>

                 <div class="col-sm-12">
                  <div class="form-group">
                     <label class=" control-label">Usuario</label>
                     <p class="form-control-static">
                      <%if @person.user%> 
                        @person.user.username
                      <%else%>
                        NO DEFINIDO
                      <%end%>
                     </p>
                  </div>
                </div>

                  </div>
                </div>


           
            
      </div>
    <%= link_to 'Edit', edit_person_path(@person) %> |
    <%= link_to 'Back', people_path %>

  </form>
  </div>
  </div>
</div>
</div>
