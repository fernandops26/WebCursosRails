
<div class="fh5co-contact animate-box ">
		<div class="alert alert-succes">
			<strong id="notice"><%= notice %></strong>
		</div>
		

		<% if @person.errors.any? %>
	    <div id="error_explanation" class="alert alert-danger">
	      <h4><strong>Existen los siguientes problemas en tu solicitud:</strong></h4>

	      <ul>
	      <% @person.errors.full_messages.each do |message| %>
	        <li><%= message%></li>
	      <% end %>
	      </ul>
	    </div>
	  <% end %>
<div class="container contenedor__registro ">
<div class="row blue" style="border-bottom:1px solid #ddd">
	<div class="col-sm-12">
		<h2 >Registro</h2>
	</div>
</div >
<div class="row">
	<div class="col-sm-12">
		<h5><strong style="color:#bbb">* Todos lo datos son requeridos</strong></h5>
	</div>
</div>

<%=form_for @person , url:signup_path do |p|%>

<div class="row  ">
	
	<div class="col-md-6">
	<div class="row">
		<div class="col-md-12">
		 <%= p.label 'Datos Personales'%></br>
			<div class="form-group">
			<%= p.text_field :nombres ,{class:'form-control',placeholder:'Nombre completo'}%>
			</div>
		</div>
		<div class="col-md-6">
			<div class="form-group">
			<%= p.text_field :ape_mat,{class:'form-control',placeholder:'Apellido Materno'}%>
			</div>
		</div>
		<div class="col-md-6">
			<div class="form-group">
			<%= p.text_field :ape_pat,{class:'form-control',placeholder:'Apellido Paterno'}%>
			</div>
		</div>
		<div class="col-md-4">
			<div class="form-group">
			<%= p.text_field :dni,{class:'form-control',placeholder:'DNI'}%>
			</div>
		</div>
		<div class="col-md-8">
			<div class="form-group">
			 <%= p.email_field :email ,{class:'form-control',placeholder:'Correo'}%>
			</div>
		</div>

		<div class="col-md-12">
			<div class="form-group">
				<label>Fecha de nacimiento</label></br>
				<%=p.date_select(:f_nacimiento, {prompt: {day: 'Dia', month: 'Mes', year: 'Año'},start_year: 1940, end_year: Date.today.year,order: [:day, :month, :year]},{class:'form-control inline',style:'display:inline;width:auto'})%>
			</div>
		</div>
	</div>

	<div class="col-md-12">
	<label>Genero</label>
		<div class="form-group">
			<div class="checkbox-inline">
				 <label><%= p.radio_button :sexo, true %> Hombre</label>
			</div>
			<div class="checkbox-inline">
				 <label><%= p.radio_button :sexo, false %> Mujer</label>
			</div>
		</div>
	</div>	
</div>
 
 	<div class="col-md-6">
 	
<div class="row">

	<div class="col-md-12">
		<div class="form-group">
		<label >Especifica tu ubicacion</label></br>
		 <%=select_tag "department_id", options_from_collection_for_select(@departamentos,"id","nombredep"),{class:'form-control'}%>
		</div>
	</div>
	<div class="col-md-12">
		<div class="form-group">
		<%= grouped_collection_select(:province,"province_id",@departamentos,:province,:nombredep,:id,:nombreprov,{class:'form-control'})%>

		</div>
	</div>
	<div class="col-md-12">
		<div class="form-group">
		<%=p.grouped_collection_select :district_id, @provincias, :district,:nombreprov,:id,:nombredist,{prompt:'Selecciona Distritos'},{class:'form-control'}%>
		</div>
	</div>
</div>
 <div class="row">
 	<div class="col-md-12">
		<div class="form-group">
		<%= p.text_field :direccion,{class:'form-control',placeholder:'Dirección'}%>
		</div>
	</div>
<div class="col-md-12">
		<div class="form-group">
		<label >Educación</label></br>
		<%= p.text_field :profesion ,{class:'form-control',placeholder:'Profesion'}%>
		</div>
	</div>
	<div class="col-md-12">
		<div class="form-group">
		<%= p.text_field :grado_acad ,{class:'form-control',placeholder:'Grado academico'}%>
		</div>
	</div>
	
	<div class="col-md-12">
		<div class="form-group">
		<%=p.submit 'Registrarse',{class:'btn btn-info'} %>
		</div>
	</div>
</div>
 
<%end%>

 </div>

</div>

</div>
</div>